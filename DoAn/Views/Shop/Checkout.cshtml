@section js{
    <script>
        $("#maTP").change(function () {
            let id = $(this).val()
            ajax(id, 1)
        })
        $("#maQuan").change(function () {
            let id = $(this).val()
            ajax(id, 2)
        })
        function ajax(id, type) {            
            $.ajax({
                type: "POST",
                url: '@Url.Action("TinhThanh","Shop")',
                data: JSON.stringify({ type: type, id: id }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (type == 1) {
                        $("#maQuan").html("")
                        $("#maPhuong").html("")
                        let i = 0
                        while (i < data.Value.length) {
                            $("#maQuan").append(new Option(data.Value[i], data.ID[i]));
                            i++
                        }
                    } else if (type == 2) {
                        $("#maPhuong").html("")
                        let i = 0
                        while (i < data.Value.length) {
                            $("#maPhuong").append(new Option(data.Value[i], data.ID[i]));
                            i++
                        }
                    }
                },
                error: function () {
                    alert("Error occured!!")
                }
            })
        }
    </script>
    <script>
        function up(id, ev) {
            increaseGioHang(id)
            let input = $(ev).next()
            let val = parseInt(input.val())
            input.val(val + 1)
            let gia = $("[sp_gia=" + id + "]").attr("gia")
            $("[tt=" + id + "]").text((gia * input.val()) + " vnd")
            tongcong() 
        }
        function down(id, ev) {
            let input = $(ev).prev()
            let val = parseInt(input.val())
            if (val <= 0) return
            reductionGioHang(id)
            input.val(val - 1)
            let gia = $("[sp_gia=" + id + "]").attr("gia")
            $("[tt=" + id + "]").text((gia * input.val()) + " vnd")
            tongcong() 
        }
        function input(id, ev) {
            let val = $(ev).val()
            addGioHang(id, val)
            let gia = $("[sp_gia=" + id + "]").attr("gia")
            $("[tt=" + id + "]").text((gia * val) + " vnd")
            tongcong() 
        }
        function deleted(id, ev) {
            dropGioHang(id)
            $("[tr=" + id + "]").fadeOut();
            tongcong()
        }
        function tongcong() {
            let tc = 0
            debugger
            $("[tt]").each(function () {
                tc += parseInt($(this).text().substring(0, $(this).text().length - 4))
            })
            $("[tc=tong_cong]").text(tc + " vnd")
        }
        tongcong()
    </script>
    @if (ViewBag.msg != null)
    {
        <script>
            alert('@Html.Raw(ViewBag.msg)')
        </script>
    }
}